{
  "name": "news-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "proxy": {
    "/api": {
      "target": "http://localhost:5000",
      "changeOrigin": true,
      "secure": false
    }
  },
  "scripts": {
    "start": "yarn install-backend && concurrently \"yarn start-client\" \"yarn start-server\"",
    "start-service": "yarn install-backend && concurrently \"yarn start-client\" \"yarn start-server-service\"",
    "dev": "yarn install-backend && concurrently \"yarn start-client\" \"yarn start-server\"",
    "start-client": "vite",
    "start-server": "cd venv/Scripts/ && activate.bat && cd ../../src/server && python3 run.py",
    "start-server-service": ". venv/bin/activate && cd src/server && /home/app/News-App/venv/bin/gunicorn --workers 3 --bind unix:webapp.sock -m 007 run:app",
    "install-backend": "cd venv/Scripts/ && activate.bat && cd ../../src/server && pip install -r requirements.txt",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "concurrently": "^7.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "sass": "^1.58.3",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^7.6.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0"
  }
}
